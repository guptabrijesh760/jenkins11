pipeline { 
    agent { 
       // Using an agent machine by label
        label 'phpdev'  
     }
     options { 
        // Timeout counter starts AFTER agent is allocated
        timeout(time: 60, unit: 'SECONDS') 
     } 
    
     environment { 
        CONTAINERIMAGE = 'nginx:latest'  // Fixed spelling (ngnix â†’ nginx)
     }
     stages {
        stage("Code Checkout") {
            steps {
                git branch: 'clothstore', url: 'https://github.com/guptabrijesh760/jenkins11.git'
            }
        }

        stage('PHP Code Deploy') { 
            steps {
                sh "sudo cp -r /home/ec2-user/jenkins/workspace/clothstore/src/clothStore/* /var/www/html/"
            }
        }

        stage("Restart Server") {
            steps {
                sh 'sudo systemctl restart httpd'
            }
        }
    }
}